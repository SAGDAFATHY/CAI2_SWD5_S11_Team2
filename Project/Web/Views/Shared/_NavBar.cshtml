@using Microsoft.AspNetCore.Identity
@inject SignInManager<Domain.Models.User> SignInManager
@inject UserManager<Domain.Models.User> UserManager
@{
    var isAuthenticated = SignInManager.IsSignedIn(User);
    var isAdmin = User.IsInRole("Admin");
    var isCustomer = User.IsInRole("Customer");
}

<div class="top-header-area" id="sticker" style="background-color:#1a1a1a">
    <div class="container" >
        <div class="row">
            <div class="col-lg-12 col-sm-12 text-center">
                <div class="main-menu-wrap">
                    <!-- logo -->
                    <div class="site-logo">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/assets/img/logo.png" alt="Fruitkha">
                        </a>
                    </div>
                    <!-- logo -->
                    <!-- menu start -->
                    <nav class="main-menu " >
                        <ul>
                            @if (!isAuthenticated)
                            {
                                <li class="current-list-item ">
                                    <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                    <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                            }
                            else if (isAdmin)
                            {
                                <!-- Admin Navbar -->
                                <li class="current-list-item ">
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index">Manage Orders</a>
                                    <a asp-area="Admin" asp-controller="Products" asp-action="Index">Manage Products</a>
                                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Manage Categories</a>
                                </li>
                            }
                            else if (isCustomer)
                            {
                                <li class="current-list-item ">
                                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    <ul class="sub-menu">
                                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Static Home</a></li>
                                        @* <li><a asp-area="" asp-controller="Home" asp-action="IndexSlider">Slider Home</a></li> *@
                                    </ul>
                                </li>
                                <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                                <li>
                                    <a href="#">Pages</a>
                                    <ul class="sub-menu">
                                        <li><a asp-area="" asp-controller="Home" asp-action="Error404">404 page</a></li>
                                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Cart">Cart</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Checkout">Check Out</a></li>
                                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                                        <li><a asp-area="" asp-controller="Blog" asp-action="Index">News</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Blog" asp-action="Index">News</a>
                                    <ul class="sub-menu">
                                        <li><a asp-area="" asp-controller="Blog" asp-action="Index">News</a></li>
                                        <li><a asp-area="" asp-controller="Blog" asp-action="Detail">Single News</a></li>
                                    </ul>
                                </li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                                <li>
                                    <a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                                    <ul class="sub-menu">
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Checkout">Check Out</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Product">Single Product</a></li>
                                        <li><a asp-area="" asp-controller="Shop" asp-action="Cart">Cart</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <div class="header-icons">
                                        <a class="shopping-cart" asp-area="" asp-controller="Shop" asp-action="Cart"><i class="fas fa-shopping-cart"></i></a>
                                        <a class="mobile-hide search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                                    </div>
								</li>
                                <li class="current-list-item ">
                                    <a asp-area="" asp-controller="Account" asp-action="Logout"><i class='fas fa-portrait' style='font-size:28px;'></i></a>
                                </li>
								<a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
								<div class="mobile-menu"></div>
                            }   
						</ul>                       
                    </nav>
					
                    <!-- menu end -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}